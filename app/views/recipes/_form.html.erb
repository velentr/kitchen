<%= form_with model: recipe do |form| %>

<div>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <% recipe.errors.full_messages_for(:title).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :ingredients %>
  <%= form.text_area :ingredients %>
  <% recipe.errors.full_messages_for(:ingredients).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :body %>
  <%= form.text_area :body %>
  <% recipe.errors.full_messages_for(:body).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>
